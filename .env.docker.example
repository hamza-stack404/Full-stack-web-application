# Docker Compose Environment Variables
# Copy this file to .env in the root directory for docker-compose

# PostgreSQL Configuration
POSTGRES_USER=todouser
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_DB=tododb

# Backend Configuration
DATABASE_URL=postgresql://todouser:change-this-secure-password@postgres:5432/tododb

# Authentication Secret (REQUIRED - generate with: openssl rand -base64 48)
BETTER_AUTH_SECRET=your-secure-secret-here

# Google Gemini API Key (Optional - for AI features)
GEMINI_API_KEY=your-gemini-api-key-here

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Debug Mode (set to false in production)
DEBUG=false
