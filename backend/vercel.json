{
  "buildCommand": "pip install -r requirements.txt",
  "builds": [
    {
      "src": "src/main.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb", 
        "runtime": "python3.9",
        "packageManager": "pip",
        "useRequirementsFile": true,
        "zeroConfig": true
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.py"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1"
  }
}
